<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp">

        <TextView
            android:id="@+id/enter_old_pin_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Old Pin" />

        <EditText
            android:id="@+id/enter_old_pin_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Current Pin Code"
            android:inputType="numberPassword"
            android:maxLength="6" />

        <TextView
            android:id="@+id/enter_new_pin_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter New PIN" />

        <EditText
            android:id="@+id/enter_new_pin_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="New Pin Code"
            android:inputType="numberPassword"
            android:maxLength="6" />

        <TextView
            android:id="@+id/re_enter_new_pin_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Re-Enter new Pin" />

        <EditText
            android:id="@+id/re_enter_new_pin_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="New Pin Code again"
            android:inputType="numberPassword"
            android:maxLength="6" />

        <Button
            android:id="@+id/save_pin_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save New Pin" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>